<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#E6F3F2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- Trạng thái đơn đặt -->
        <TextView
            android:id="@+id/tvTrangThaiDonDat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã đặt"
            android:gravity="end"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <!-- Tên khách hàng -->
        <TextView
            android:id="@+id/tvTenKhach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng: "
            android:fontFamily="serif"
            android:textStyle="bold" />

        <!-- Danh sách sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách sản phẩm: "
            android:fontFamily="serif"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDanhSachSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Nho hồng nhật"
            android:fontFamily="serif"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:textSize="13sp" />

        <!-- Thời gian đặt hàng -->
        <TextView
            android:id="@+id/tvThoiGianItemDonDatUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: "
            android:fontFamily="serif"
            android:textStyle="bold" />

        <!-- Phân cách -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D7D4D4"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />

        <!-- Tổng tiền thanh toán -->
        <TextView
            android:id="@+id/tvTongTienItemDonDatUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền thanh toán: 0.000 VND"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="end" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
